{
  "swagger": "2.0",
  "info": {
    "description": "TicTacToe challenge",
    "version": "0.2.0",
    "title": "TicTacToe Api",
    "contact": {
      "email": "alessio.izzo86@gmail.com"
    }
  },
  "paths": {
    "/api/status": {
      "get": {
        "summary": "Status of the server",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/tic-tac-toe": {
      "post": {
        "summary": "Given a tic tac toe board game, it returns the winner. If there is no winner, it returns null",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "board": {
                  "type": "array",
                  "example": [["x", "x", "o"], ["x", "", "o"], ["", "", "o"]]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "winner": {
                  "type": "string",
                  "example": "x"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Error in handling the request data"
          }
        }
      }
    }
  }
}

